{
	"compilerOptions": {
		"noEmit": true,
		"target": "ESNext",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"jsx": "react",
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"baseUrl": "src",
		"paths": {
			"@/*": [
				"./*"
			]
		},
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"isolatedModules": true
	},
	"include": [
		"src"
	]
}
